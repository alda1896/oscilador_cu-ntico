    "def poli (x):\n",
    "    y=x**2-3*x-4\n",
    "    return(y)\n",
    "\n",
    "xl=0\n",
    "xp=10\n",
    "error= 1e-3\n",
    "xr=(xl+xp)/2\n",
    "\n",
    "while abs(poli(xr)) > error:\n",
    "    xr=(xl+xp)/2.\n",
    "    if poli(xl)*poli(xr) < 0:\n",
    "        xp=xr\n",
    "    else:\n",
    "        xl=xr\n",
    "print (\"la raiz es: \",xr)"
